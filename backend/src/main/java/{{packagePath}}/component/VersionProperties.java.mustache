package {{{javaPackageFull}}}.component;

import com.fasterxml.jackson.annotation.JsonInclude;
import lombok.Data;
import org.springframework.boot.context.properties.ConfigurationProperties;
import org.springframework.context.annotation.PropertySource;
import org.springframework.stereotype.Component;

/**
 * Version Properties Component for {{{projectName}}}
 *
 * Provides access to build and deployment metadata from version.properties
 * This file is typically generated by CI/CD pipelines during build/deployment
 *
 * Properties available:
 * - gh.build: GitHub run number
 * - gh.attempt: GitHub run attempt
 * - gh.action: GitHub action name
 * - gh.modifiedDate: Build timestamp
 * - gh.sha: Git commit SHA
 */
@Data
@Component
@ConfigurationProperties(prefix = "gh")
@PropertySource(value = "classpath:version.properties", ignoreResourceNotFound = true)
@JsonInclude(JsonInclude.Include.NON_NULL)
public class VersionProperties {

    /**
     * GitHub Actions run number (e.g., "123")
     */
    private String build;

    /**
     * GitHub Actions run attempt number (e.g., "1")
     */
    private String attempt;

    /**
     * GitHub Actions workflow name (e.g., "CI/CD Pipeline")
     */
    private String action;

    /**
     * Build/deployment timestamp in ISO 8601 format
     */
    private String modifiedDate;

    /**
     * Git commit SHA (short or long form)
     */
    private String sha;
}
