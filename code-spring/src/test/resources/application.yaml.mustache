# Test Configuration
# Generated by Genesis3
# This configuration is used when running tests

spring:
  application:
    name: {{{projectName}}}-api-test
  # Use H2 in-memory database for tests
  datasource:
    url: jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
    driver-class-name: org.h2.Driver
    username: sa
    password:
  jpa:
    hibernate:
      ddl-auto: create-drop
    show-sql: false
    properties:
      hibernate:
        dialect: org.hibernate.dialect.H2Dialect
        format_sql: false
  # Disable Liquibase for tests (schema created by Hibernate)
  liquibase:
    enabled: false
  # Disable security auto-configuration for tests
  autoconfigure:
    exclude:
      - org.springframework.boot.autoconfigure.security.servlet.SecurityAutoConfiguration
      - org.springframework.boot.autoconfigure.security.oauth2.resource.servlet.OAuth2ResourceServerAutoConfiguration

server:
  port: 0  # Random port for tests

app:
  env:
    host: http://localhost:8080
    ui: http://localhost:3000
    buildTool: {{buildTool}}
  # Disable custom security configuration for tests
  security:
    enabled: false

logging:
  level:
    root: WARN
    {{{javaPackageFull}}}: INFO
    org.springframework: WARN
    org.hibernate: WARN
